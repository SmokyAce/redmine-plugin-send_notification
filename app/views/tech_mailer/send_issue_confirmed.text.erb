<%= l(:email_body_greeting)%>

<%= "https://%{host}/issues/%{id}" % { host: Setting.host_name, id: @issue.id } %>.
<%= l(:email_body_issue_confirmed_header, id: @issue.id, subject: @issue.subject)%>.

<% if @issue.start_date? && @issue.due_date? && (@issue.disabled_core_fields & %w(start_date due_date)).empty? %>
<%= l(:email_body_issue_start_date)%>: <%= format_date(@issue.start_date) %>
<%= l(:email_body_issue_due_date)%>: <%= format_date(@issue.due_date) %>
<% end %>

<%= l(:email_body_signature)%>